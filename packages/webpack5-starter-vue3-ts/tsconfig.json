{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    // 不需要通过 tsc 编译，而是用 babel 编译
    "noEmit": true,
    // 生成声明文件
    // "emitDeclarationOnly": true,
    // "declaration": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    // "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "jsx": "preserve",
    // 默认会查找 node_modules/@types 下的，不需要配置白名单
    // "types": ["node", "jest"],
    "rootDir": ".",
    "paths": {
      "@/*": ["src/*"]
      // "@vue/*": ["packages/*/src"],
      // "vue": ["packages/vue/src"]
    }
  }
  // "include": [
  //   // "packages/global.d.ts",
  //   // "packages/*/src",
  //   // "packages/*/__tests__"
  // ]
}
